<%- include ('partials/header.ejs') %> <%- include ('partials/navbar.ejs') %>
<h2 style="color: #fff">A mais divertida na minha opinião</h2>
<div class="container">
  <div class="card">
    <div class="card-header bg-dark text-white">
      <h1>Cadastrar Laner</h1>
    </div>
    <div class="card-body bg-dark text-white">
      <form method="POST" action="/top/new" >
        <label>Nome do Campeão:</label>
        <input
          type="text"
          name="campeao"
          id="campeao"
          placeholder="Digite o nome do Campeão"
          class="form-control"
          required
        />
        <label>Classe do Campeão:</label>
        <input
          type="text"
          name="classe"
          id="classe"
          placeholder="Digite a classe do Campeão"
          class="form-control"
          required
        />
        <label>Motivo de jogar:</label>
        <input
          type="text"
          name="motivo"
          id="motivo"
          placeholder="Digite o motivo de jogar com o Campeão"
          class="form-control"
          required
        />
        <br>
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>
<br>
<table class="table table-dark table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Campeão:</th>
      <th>Classe:</th>
      <th>Motivo:</th>
      <th style="text-align: center;" colspan="2">Ações:</th>
    </tr>
  </thead>
  <tbody>
    <!-- FOREACH -->
    <% topLaners.forEach(topLaners => { %>
    <tr>
      <td><%= topLaners.campeao %></td>
      <td><%= topLaners.classe %></td>
      <td><%= topLaners.motivo %></td>
      <td><a style="color: orange;" href="/top/edit/<%= topLaners.id %>">Editar</a></td>
      <td><a style="color: red;" href="/top/delete/<%= topLaners.id %>">Excluir</a></td>
    </tr>
    <% }) %>
  </tbody>
</table>


<%- include ('partials/footer.ejs') %>
