<%- include ('partials/header.ejs') %> <%- include ('partials/navbar.ejs') %>
<div class="container">
  <div class="card">
    <div class="card-header bg-dark">
      <h1>Alterar campeão</h1>
      <hr />
      <form method="POST" action="/top/update/<%= topLaners.id %>">
        <label>Nome do campeão:</label>
        <input
          type="text"
          name="campeao"
          id="campeao"
          value="<%= topLaners.campeao %>"
          class="form-control"
          required
        />

        <label>Classe do campeão:</label>
        <input
          type="text"
          name="classe"
          id="classe"
          value="<%= topLaners.classe %>"
          class="form-control"
          required
        />

        <label>Motivo de jogar:</label>
        <input
          type="text"
          name="motivo"
          id="motivo"
          value="<%= topLaners.motivo %>"
          class="form-control"
          required
        />
        <br />
        <input type="hidden" name="id" value="<%= topLaners.id %>" />
        <input
          type="submit"
          class="btn btn-warning"
          value="Alterar"
          onclick="return confirm('Confirma as alterações realizadas para o campeão <%= topLaners.campeao %>?')"
        />
      </form>
      <hr />
    </div>
  </div>
</div>
<br />
<%- include ('partials/footer.ejs') %>
